{
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier", "prettier/react"],
  "env": {
    "node": false,
    "amd": true,
    "browser": true
  },
  "globals": {
    "__DEV__": false
  },
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "import/no-named-as-default": 0, // when exporting containers and a component
    "import/extensions": 0,
    "new-cap": 0,
    "no-shadow": 0,
    "max-len": [2, 120],

    // Reassigning when reducing is nice.
    "no-param-reassign": 0,

    // Don't want to force static for React component methods
    "class-methods-use-this": 0,

    // Make it possible to quote object keys
    "quote-props": 0,

    // Need to allow object for style props.
    "react/forbid-prop-types": [2, { "forbid": ["any"] }],

    "react/require-default-props": 0,
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore"
      }
    ],

    // Overriden Rules -- Haptik Inc.
    "jsx-a11y/no-static-element-interactions": 0,
    "no-console": 0,
    "react/jsx-no-bind": 0,
    "react/jsx-boolean-value": 0,
    "arrow-body-style": 0,
    "guard-for-in": 0,
    "no-restricted-syntax": 0,
    "consistent-return": 0,
    "no-underscore-dangle": 0,
    "import/prefer-default-export": 0,
    "no-unneeded-ternary": 0,
    "react/sort-comp": 0,
    "no-mixed-operators": 0,
    "react/jsx-filename-extension": 0,
    "global-require": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "react/no-array-index-key": 0,
    "array-callback-return": 0,
    "no-unused-expressions": 0,
    "prefer-destructuring": 0,
    "jsx-a11y/alt-text": 0,
    "react/destructuring-assignment": 0,
    "jsx-a11y/no-noninteractive-tabindex": 0,
    "jsx-a11y/no-autofocus": 0
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
